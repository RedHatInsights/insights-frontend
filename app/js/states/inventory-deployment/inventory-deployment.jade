inventory-header(name='{{deployment.name}}', region='{{deployment.region}}', type='{{deployment.type}}')

table-filters
  search-box(on-search='filter.setSearchTerm(model); filter.doFilter();', throttle='1000', placeholder="{{:: 'Find a system' | translate}}")
  actions-select

  // Non-functioning filters

  // Optimization Potential
  .filter-group.optimization-potential-select
    label(translate) Optimization
    md-menu(md-offset="0 38")
      md-button.button-filter(
        type='button',
        data-toggle='dropdown',
        aria-haspopup='true',
        aria-expanded='false',
        ng-click='$mdMenu.open($event)')
        span.text.active(ng-model='label') All
        span.caret
      md-menu-content
        md-menu-item
          a High
        md-menu-item
          a Moderate
        md-menu-item
          a Low

  // Reliability Filter
  .filter-group.reliability-select
    label(translate) Reliability
    md-menu(md-offset="0 38")
      md-button.button-filter(
        type='button',
        data-toggle='dropdown',
        aria-haspopup='true',
        aria-expanded='false',
        ng-click='$mdMenu.open($event)')
        span.text.active(ng-model='label') All
        span.caret
      md-menu-content
        md-menu-item
          a High
        md-menu-item
          a Moderate
        md-menu-item
          a Low

  // Tags Filter
  .filter-group.tags-select
    label(translate) Tags
    md-menu(md-offset="0 38")
      md-button.button-filter(
        type='button',
        data-toggle='dropdown',
        aria-haspopup='true',
        aria-expanded='false',
        ng-click='$mdMenu.open($event)')
        span.text.active(ng-model='label') All
        span.caret
      md-menu-content
        md-menu-item
          a DMZ
        md-menu-item
          a Prod

