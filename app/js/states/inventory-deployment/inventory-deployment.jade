.page-inventory
  page-header(title="Inventory")
  table-filters
    search-box(on-search='filter.setSearchTerm(model); filter.doFilter();', throttle='1000', placeholder="{{:: 'Find a system' | translate}}")
    check-in-select
    actions-select

  .rha-notifications
  section.content
    .table-utilities

    inventory-actions

    .card-table-header(ng-if='getListType() === listTypes.card')
      md-checkbox.md-accent.md-hue-1.md-checkbox-list.checkbox(
        tooltip="{{:: 'Select All' | translate}}",
        aria-label='Select All Systems Checkbox',
        tooltip-trigger='mouseenter',
        tooltip-append-to-body='true',
        tooltip-placement='top',
        type="checkbox",
        md-indeterminate="{{ checkboxes.indeterminate || false }}",
        ng-model='checkboxes.checked',
        ng-change='selectAll(); checkboxes.checkboxChecked(checkboxes.checked, getSelectableSystems())')
      label.type(translate, ng-click="sort('system_type_id')") &nbsp; Type
      strong.hostname(translate, ng-click="sort('toString')") Name &nbsp;
      strong.action-count(translate, ng-click="sort('report_count')") Action Count

    .inventory.card-list.card-pf-view
      card.card-pf-view.card-pf-view-select.card-pf-view-single-select(
        ng-repeat='system in systems track by system.system_id',
        system='system',
        ng-click='showActions(system)'
        )
        card-content
          .card-pf-top-element
            type-icon.type.card-pf-icon-circle(type-id='system.system_type_id' include-text='false')
            h2.card-pf-title.text-center {{system.product_code}}

          .card-pf-items.text-center
            .card-pf-item
              .icon-inline
                i.fa.fa-times-circle-o.i-error
                a(href="#") System
            .card-pf-item
              .icon-inline
                i.fa.fa-check
                a(href="#") Infra

          .ellipsis-wrapper.hostname
            strong.hostname {{:: system.toString }}
            span(ng-if='!system.isCheckingIn') &nbsp;(stale system)

          a.action-count.icon-inline(ng-click='showActions(); $event.stopPropagation();')
            span.text(translate, translate-n="system.report_count", translate-plural="{{:: $count}} Actions") {{:: system.report_count}} Action
            span(ng-class="{'success': !system.report_count, 'fail': system.report_count}")
              i.fa(ng-click='showActions(); $event.stopPropagation();', ng-class="{'no-action': !system.report_count, 'yes-action': system.report_count}")          

        card-footer
          span test footer

