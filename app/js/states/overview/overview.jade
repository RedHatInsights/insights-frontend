.overview
  page-header(title="Overview", icon="fa-tachometer")
  .page.flexgrid.equalheights
    .rha-notifications
    .row
      .col-md-5.col-lg-6.left-col
        .grid-block
          section.widget-block
            span.pull-right(ng-show='isInternal')
              | [
              a(ng-click='edit()') edit
              | ]
            h2.title
              i.fa.fa-fire
              span(translate) Latest
            handcrafted-content
        new-systems
      .col-md-7.col-lg-6.right-col.border-bottom
        .grid-block
          section.widget-block
            h2.title
              i.fa.fa-file-text
              span(translate) Actions&nbsp;
              span.light(translate) Summary
              a.cta-link(translate, ui-sref="app.actions") View actions
            severity-summary(stats='stats')

        .grid-block(ng-if="isBeta")
          section.widget-block.widget-block-narrow
            incident-lite

        .grid-block(ng-if="!paid()")
          section.widget-block
            h2.title
              i.fa.fa-bullseye &nbsp;
              span(translate) Optimize&nbsp;
              span.light(translate) Your Experience
            goals-lite

        .grid-block(ng-if='config.isPlannerEnabled')
          maintenance-plan-lite
        new-rules