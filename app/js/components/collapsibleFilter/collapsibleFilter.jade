.toolbar.toolbar--data-filters
  #dataFiltersHeader.dataFiltersHeader
    .flexgrid
      .row
        .col-sm-6.col-md-8
          label.search
            strong(translate) Search
            search-box(on-search='search.doFilter(model)', placeholder='{{searchPlaceholder}}')
        .col-sm-6.col-md-4.text-right-sm
          button.btn.btn-blank.filterToggle(data-toggle='collapse', href='#dataFiltersBody', aria-expanded='false', aria-controls='dataFiltersBody')
            span(translate) Data filters
            i.fa.fa-filter(aria-hidden="true")
          .sep
          list-type

  #dataFiltersBody.dataFiltersBody.collapse.in
    div(ng-transclude)

  #dataFiltersFooter.dataFiltersFooter(ng-show='hasTags()', ng-model='tags')
    .active-filters
      strong(translate) Active filters:&nbsp;
      // remove filter on click
      button.btn.btn-accent(ng-repeat="(key, value) in tags", ng-click='removeFilter(key)')
        span(translate) {{value | translate}}
        i.fa.fa-times-circle-o(aria-hidden="true")
