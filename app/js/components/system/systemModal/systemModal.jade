.system-overlay
  .rha-notifications
  .modal-actions
    .fa.fa-close.pull-right(ng-click='close()')
  system-metadata(system='system')

  md-tabs(md-dynamic-height='', md-border-bottom='')
    md-tab(md-on-select="setActive('system')", label='Rules', md-active='activeTab === "system"')
    md-tab(md-on-select="setActive('policy')", label='Policies', md-active='activeTab === "policy"', ng-if='hasPolicies')

  // hack to kill the 200MB tab usage
  .tabs-hack(ng-if="activeTab === 'system'")
    .rule-summaries(system='system', machine-id='system.system_id', rule='rule', rule-filter='ruleFilter', loading='loading')
    .rule-summary.system-overlay-item.content-block(ng-if='system.__fake', report='report', rule='rule', loading='loading')
  .tabs-hack(ng-if="activeTab === 'policy'")
    policies-modal(system-id='system.system_id')
      