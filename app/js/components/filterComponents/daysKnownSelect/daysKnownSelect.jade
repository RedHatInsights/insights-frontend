.filter-group.filter-days-known
  label(translate) Days Known
  md-menu(md-offset="0 38")
    md-button.button-filter(
      type='button',
      data-toggle='dropdown',
      aria-haspopup='true',
      aria-expanded='false',
      ng-click='$mdMenu.open()')
      span {{selected.title | translate}}
      span.caret
    md-menu-content
      md-menu-item(ng-repeat='(key, option) in options', ng-click='select(key)', ng-checked='selected === option')
        a {{option.title | translate}}
