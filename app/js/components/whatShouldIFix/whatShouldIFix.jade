section.widget-block
  h2.title
    i.fa.fa-heartbeat
    span(translate) Recommended Fixes
  table
    tr(ng-repeat='r in rules')
      td(style='width:80%')
        a(ui-sref='app.actions-rule({category: r.category.toLowerCase(), rule: r.rule_id})') {{ r.error_key }}
        .small(translate) {{ r.description }}
        strong.small(translate, translate-n='r.impacted_systems', translate-plural='{{$count}} systems affected') {{ r.impacted_systems }} system affected
      td(style='width:20%')
        ansible-icon(value='r.ansible', show-tooltip='true')
