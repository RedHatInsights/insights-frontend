.metadata-card
  .inventory
    card-content
      .display-name.text-center
        strong {{:: system.toString }}
      .host-info
        .hostname
          i.pficon-screen
          span openshift0.us-west.redhat.com
        .status-check
          i.fa.fa-clock-o
          span.hostname Last Check: {{::system.last_check_in | timeAgo }}
          i.pficon-info(ng-if='!system.isCheckingIn', tooltip="New Image Available")

      .card-pf-top-element
        .tile-with-text
          .optimization-tile.tile.tile-sm(class='{{system.optimization}}', tooltip='Optimization: {{system.optimization}}')
            ins-battery(status='{{system.optimization}}')
          .tile-label
            span Optimization
            span {{::system.optimization}}

        .tile-with-text
          .reliability-tile.tile.tile-sm(class='{{system.reliability}}' tooltip='Reliability: {{system.optimization}}')
            ins-battery(status='{{system.reliability}}')
          .tile-label
            span Reliability
            span {{::system.reliability}}

